#!/bin/sh

ME=`hostname -s`
HOSTS="rd-linkdrop-01 rd-linkdrop-02"
ARGS=$*

for h in $HOSTS; do
  if [ "$ME" != "$h" ]; then  
    rsync --exclude=.ssh/id_rsa --exclude=.bash_history -av --delete --checksum $HOME/ $h:$HOME/ $ARGS
    echo "[$h] Restarting httpd"
    ssh $h "sudo /etc/rc.d/init.d/httpd graceful"
  fi
done
